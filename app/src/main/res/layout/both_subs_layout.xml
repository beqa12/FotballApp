<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_gravity="center_horizontal"
    android:background="@color/black">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_fifty_percentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first_team_first_player_subs_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/guide_fifty_percentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/first_player_subs_image_frame"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/first_team_subs_oval"
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/fooballer_oval_bg"
                android:scaleType="centerCrop" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/first_team_subs_player_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="7dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/first_team_subs_oval"
                app:layout_constraintEnd_toEndOf="@+id/first_team_subs_oval"
                app:layout_constraintStart_toStartOf="@+id/first_team_subs_oval"
                app:layout_constraintTop_toTopOf="@+id/first_team_subs_oval" />
        </FrameLayout>

        <com.example.footballapp.ui.details.custom.CTextView
            android:id="@+id/player_subs_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="payer_image_frame"
            app:layout_constraintStart_toEndOf="@+id/first_player_subs_image_frame"
            app:layout_constraintTop_toTopOf="@+id/first_player_subs_image_frame" />

        <com.example.footballapp.ui.details.custom.CTextView
            android:id="@+id/player_subs_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="djkcnsdjvn"
            app:layout_constraintStart_toEndOf="@+id/first_player_subs_image_frame"
            app:layout_constraintTop_toBottomOf="@+id/player_subs_title" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/player_subs_in_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:src="@drawable/substitution_in_img"
            app:layout_constraintBottom_toBottomOf="@+id/player_subs_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/player_subs_name" />

        <View
            android:id="@+id/first_player_subs_line_view"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="@color/_CCFFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/player_action_dot"
            app:layout_constraintBottom_toBottomOf="@+id/player_subs_in_img"
            app:layout_constraintEnd_toEndOf="@+id/first_player_subs_line_view"
            app:layout_constraintStart_toStartOf="@+id/first_player_subs_line_view"
            app:layout_constraintTop_toTopOf="@+id/player_subs_in_img" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/first_team_second_player_subs_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/first_player_subs_image_frame"
            app:layout_constraintStart_toStartOf="@+id/first_player_subs_image_frame"
            app:layout_constraintTop_toBottomOf="@+id/first_player_subs_image_frame">

            <FrameLayout
                android:id="@+id/second_player_subs_image_frame"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_gravity="center_horizontal"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/second_team_subs_oval"
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/fooballer_oval_bg"
                    android:scaleType="centerCrop" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/second_team_subs_player_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="7dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/second_team_subs_oval"
                    app:layout_constraintEnd_toEndOf="@+id/second_team_subs_oval"
                    app:layout_constraintStart_toStartOf="@+id/second_team_subs_oval"
                    app:layout_constraintTop_toTopOf="@+id/second_team_subs_oval" />
            </FrameLayout>

            <com.example.footballapp.ui.details.custom.CTextView
                android:id="@+id/player_subs_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/second_player_subs_image_frame"
                app:layout_constraintStart_toEndOf="@+id/second_player_subs_image_frame"
                app:layout_constraintTop_toTopOf="@+id/second_player_subs_image_frame" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/subs_out_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="14dp"
                android:src="@drawable/substitution_out_img"
                app:layout_constraintBottom_toBottomOf="@+id/second_player_subs_image_frame"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/second_player_subs_image_frame" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




    <FrameLayout
        android:id="@+id/first_container"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/player_first_subs_oval"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/fooballer_oval_bg"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/first_team_subs_player_img_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="7dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/player_first_subs_oval"
            app:layout_constraintEnd_toEndOf="@+id/player_first_subs_oval"
            app:layout_constraintStart_toStartOf="@+id/player_first_subs_oval"
            app:layout_constraintTop_toTopOf="@+id/player_first_subs_oval" />
    </FrameLayout>


    <com.example.footballapp.ui.details.custom.CTextView
        android:id="@+id/player_subs_title_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="payer_image_frame"
        app:layout_constraintEnd_toStartOf="@+id/first_container"
        app:layout_constraintTop_toTopOf="@+id/first_container" />

    <com.example.footballapp.ui.details.custom.CTextView
        android:id="@+id/player_subs_name_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="djkcnsdjvn"
        app:layout_constraintEnd_toStartOf="@+id/first_container"
        app:layout_constraintTop_toBottomOf="@+id/player_subs_title_second" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/player_subs_in_img_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:src="@drawable/substitution_in_img"
        app:layout_constraintBottom_toBottomOf="@+id/player_subs_name_second"
        app:layout_constraintStart_toEndOf="@+id/guide_fifty_percentage"
        app:layout_constraintTop_toTopOf="@+id/player_subs_name_second" />

    <View
        android:id="@+id/first_player_subs_line_view_second"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:background="@color/_CCFFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/guide_fifty_percentage"
        app:layout_constraintStart_toStartOf="@+id/guide_fifty_percentage"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/player_action_dot"
        app:layout_constraintBottom_toBottomOf="@+id/player_subs_in_img_second"
        app:layout_constraintEnd_toEndOf="@+id/first_player_subs_line_view_second"
        app:layout_constraintStart_toStartOf="@+id/first_player_subs_line_view_second"
        app:layout_constraintTop_toTopOf="@+id/player_subs_in_img_second" />


    <FrameLayout
        android:id="@+id/second_player_frame_container"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_gravity="center_horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/first_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_container">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/second_team_subs_oval_second"
            android:layout_width="65dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/fooballer_oval_bg"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/second_team_subs_player_img_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="7dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/second_team_subs_oval_second"
            app:layout_constraintEnd_toEndOf="@+id/second_team_subs_oval_second"
            app:layout_constraintStart_toStartOf="@+id/second_team_subs_oval_second"
            app:layout_constraintTop_toTopOf="@+id/second_team_subs_oval_second" />
    </FrameLayout>


    <com.example.footballapp.ui.details.custom.CTextView
        android:id="@+id/player_subs_out_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/second_player_frame_container"
        app:layout_constraintEnd_toStartOf="@+id/second_player_frame_container"
        app:layout_constraintTop_toTopOf="@+id/second_player_frame_container" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/subs_out_img_seocnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:src="@drawable/substitution_out_img"
        app:layout_constraintBottom_toBottomOf="@+id/second_player_frame_container"
        app:layout_constraintStart_toEndOf="@+id/guide_fifty_percentage"
        app:layout_constraintTop_toTopOf="@+id/second_player_frame_container" />

</androidx.constraintlayout.widget.ConstraintLayout>